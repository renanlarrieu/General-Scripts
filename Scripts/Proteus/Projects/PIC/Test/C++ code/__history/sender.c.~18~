#include <16f877a.h>
#fuses hs,nowdt
#use delay (clock=16M)

void main()
{
    set_tris_b(0b0);
    output_low(pin_b0);
    
    TRISB=0b00000000;//tris B diz que todos os pinos de porte B serão saída, isto é 0 = output e i = input.
    //O '0' antes do 'b' indica que utilizaremos a linguagem binária
    PORTB=0b00000000;//inicia todos os 8 pinos com nível logico baixo pois 0=low e 1=high
    
    while(true)
    {
        output_high(pin_b0);
        delay_us(1);
        output_low(pin_b0);
        delay_us(1);
    
    
    
    }
    while(1)
    {
        RB2_bit = 1;
        delay_ms(1000);
        RB2_bit = 0;
        delay_ms(1000);
    
    
    }

}
